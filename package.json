{
  "name": "pregnancycare360-monitoring",
  "version": "1.0.0",
  "description": "AI-Powered Pregnancy Monitoring Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api-gateway\" \"npm run dev:patient-service\" \"npm run dev:provider-service\" \"npm run dev:ai-ml\" \"npm run dev:notification-service\"",
    "dev:api-gateway": "npm run dev --workspace=services/api-gateway",
    "dev:patient-service": "npm run dev --workspace=services/patient-service",
    "dev:provider-service": "npm run dev --workspace=services/provider-service",
    "dev:ai-ml": "npm run dev --workspace=services/ai-ml",
    "dev:notification-service": "npm run dev --workspace=services/notification-service",
    "dev:integration-service": "npm run dev --workspace=services/integration-service",
    "dev:mobile": "npm run dev --workspace=apps/mobile",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:provider-dashboard": "npm run dev --workspace=apps/provider-dashboard",
    "build": "npm run build --workspaces",
    "build:services": "npm run build --workspace=services/*",
    "build:apps": "npm run build --workspace=apps/*",
    "test": "npm run test --workspaces",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "security-scan": "npm audit && snyk test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:staging": "npm run build && kubectl apply -f infrastructure/k8s/staging/",
    "deploy:production": "npm run build && kubectl apply -f infrastructure/k8s/production/",
    "db:migrate": "npm run migrate --workspace=packages/database",
    "db:seed": "npm run seed --workspace=packages/database",
    "db:reset": "npm run reset --workspace=packages/database",
    "generate:types": "npm run generate --workspace=packages/shared",
    "docs:build": "typedoc --out docs/api packages/shared/src",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "playwright": "^1.38.0",
    "prettier": "^3.0.3",
    "snyk": "^1.1230.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Travis-Picou/pregnancycare360-monitoring.git"
  },
  "author": "Travis Picou <travis.picou08@gmail.com>",
  "license": "PROPRIETARY",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  }
}